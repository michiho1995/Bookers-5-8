 <h1>Books</h1>
  <table>
   <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>

  </tbody>
</table>

 <h2>New books</h2>
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
 <%= form_with model: @book, url:'/books', local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book'  %>
<% end %>


